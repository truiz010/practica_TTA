<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="es.ehu.tta.practica.presentacion.presentacion.ExerciseActivity">

    <TextView
        android:id="@+id/exercise_wording"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/button_send_file"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SUBIR FICHERO"
        android:onClick="sendFile"/>

    <Button
        android:id="@+id/button_take_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SACAR FOTO"
        android:onClick="takePhoto"/>

    <Button
        android:id="@+id/button_audio_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GRABAR AUDIO"
        android:onClick="audioRecord"/>

    <Button
        android:id="@+id/button_video_record"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="GRABAR VIDEO"
        android:onClick="videoRecord"/>

</LinearLayout>
