<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="es.ehu.tta.practica.presentacion.presentacion.MenuActivity">

    <TextView
    android:id="@+id/menu_login"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:textSize="20dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="@string/leccion"
        android:textSize="20dp"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NUEVO TEST"
        android:onClick="test"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NUEVO EJERCICIO"
        android:onClick="ejercicio"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="SEGUIMIENTO"/>
       <!-- android:onClick="seguimiento"-->
</LinearLayout>
